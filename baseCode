boolean swipeLeft = false;
boolean swipeRight = false;

float vel = 1;

class emails{
  String title;
  float x, y;
  String[] txt;
  boolean isSpam;
  
  emails(){
    title = "";
    txt = new String[]{};
    isSpam = false;
    x = 55;
    y = 80;
  }
  
  emails(String title1, String[] t, boolean b) {
    title = title1;
    txt = t;
    isSpam = b;
    x = 55;
    y = 80;
  }
  
  void display(){
    fill(240);
    strokeWeight(10);
    stroke(200, 200, 200);
    // base rectangle, background card shape
    rect(x, y, 440, 640, 20);
    // text
    fill(0);
    textSize(25);
    //title
    text(title + "\n\n", x+20, y+25, 390, 640);
    //profile icon
    fill(100, 200, 0);
    strokeWeight(2);
    circle(x+40, y+100, 45);
    fill(0);
    // display each paragraph
    for(int i = 0; i < txt.length; i++){
      textSize(22);
      text(txt[i] + "\n\n", x+25, y+150 + i*150, 390, 640);
    }
    
  }
  
}

// runs once at beginning and NEVER again (unless called like a function)
void setup(){
  size(560, 800);
  createEmails();
}

// runs 60 times per second (60 fps)
void draw(){
  drawBg();
  drawEmails();
}

void animate(emails e){
  if(swipeRight) {
    e.x += vel;
    vel += 1;
  }
  else if(swipeLeft){
    e.x -= vel;
    vel += 1;
  }
  
  if(e.x < -450 || e.x > 560) {
    println("removing");
    swipeRight = false;
    swipeLeft = false;
    arr.remove(e);
  }
}

// draws the emails on the screen
void drawEmails(){
  if(arr.size() >= 2) {
    arr.get(1).display();
  }
  if(arr.size() >= 1) {
    arr.get(0).display();
    animate(arr.get(0));
  }
}

void createEmails(){  
  arr.add(new emails("Test1", genText(), false));
  arr.add(new emails("Test2", genText(), false));
}

String[] genText(){
  String[] ret = new String[3];
  // index for arrays
  
  float brand = random(0, 1);
  if(brand < 0.5){
    int i = (int)random(0, 9);
    ret[0] = paraOne[i];
    ret[1] = paraTwo[i];
    ret[2] = paraThree[i];
  }
  else{
    ret[0] = spamParaOne[(int)random(0, 8)];
    ret[1] = spamParaTwo[(int)random(0, 8)];
    ret[2] = spamParaThree[(int)random(0, 8)];
  }
  
  return ret;
}

void drawBg(){
  background(225);
  fill(225);
  strokeWeight(20);
  stroke(50, 50, 50);
  rect(0, 0, 560, 800);
  
  noStroke();
  fill(100);
  rect(90, 115, 440, 640, 20);
  fill(150);
  rect(75, 100, 440, 640, 20);
}

void mouseDragged(){
  //println("press");
  if((pmouseX - mouseX) < 0){
     swipeRight = true;
     //println("Right");
  }
  if((pmouseX - mouseX) > 0){
    swipeLeft = true;
    //println("Left");
  }
}
