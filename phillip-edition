String[] regTitles = new String[]{"HackCMU", "Meeting Today", "Guys Help", "Team Meet", "Sick Day", "Task 3 Completion", "Lunch Date!", "Covering Shift", "Long Time No See"};

String[] regResp = new String[]{"I look forward to being there!", "No problem. Does Saturday 1pm work?", "Yikes, I have no idea sorry :(", "See you at the meeting.", "Sounds, good! Let's set up a Zoom call.", "I can finish the task by tomorrow.", "See u later!", "Sorry, I can’t come in today.", "Sounds good, see you then!"};

String[] spamResp = new String[]{"Donated! Hope all goes well.", "Oh no! My info is XXX@cmu.edu and XXX", "My AID is XXX and password XXX", "My account number is XXX", "My username is XXX.", "I want to apply.", "[Click to cancel order]", "[Click the link]"};

int spamLen = 8;
int regLen = 9;

boolean swipeLeft = false;
boolean swipeRight = false;

float vel = 1;

class emails{
  String title;
  float x, y;
  String[] txt;
  boolean isSpam;
  float[] rgb = new float[3];
  int resp;
  
  emails(){
    title = "";
    txt = new String[]{};
    isSpam = false;
    x = 55;
    y = 80;
    resp = 0;
  }
  
  emails(String title1, String[] t, boolean b, int r) {
    title = title1;
    txt = t;
    isSpam = b;
    resp = r;
    x = 55;
    y = 80;
    rgb[0] = random(0, 255);
    rgb[1] = random(0, 255);
    rgb[2] = random(0, 255);
  }
  
  void display(){
    fill(240);
    strokeWeight(10);
    stroke(200, 200, 200);
    // base rectangle, background card shape
    rect(x, y, 440, 640, 20);
    // text
    fill(0);
    textSize(25);
    
    //title
    text(title + "\n\n", x+20, y+25, 390, 640);
    //profile icon
    fill(rgb[0], rgb[1], rgb[2]);
    strokeWeight(2);
    circle(x+40, y+95, 45);
    fill(0);
    // display each paragraph
    String temp = txt[0] + "\n\n" + txt[1] + "\n\n" + txt[2];
    textSize(22);
    text(temp, x+25, y+140, 390, 640);
    //for(int i = 0; i < txt.length; i++){
    //  textSize(22);
    //  text(txt[i] + "\n\n", x+25, y+130 + i*180, 390, 640);
    //}
  }
  
}

// runs once at beginning and NEVER again (unless called like a function)
void setup(){
  size(800, 800);
  createEmails();
  //PFont myFont = loadFont("LucidaSans-24.vlw");
  //textFont(myFont);
}

// runs 60 times per second (60 fps)
void draw(){
  checkGameOver();
  drawBg();
  checkGameOver();
  drawEmails();
  checkGameOver();
}

// animates the swiping of the emails
void animate(emails e){
  if(swipeRight) {
    e.x += vel;
    vel += 1;
  }
  else if(swipeLeft){
    e.x -= vel;
    vel += 1;
  }
  
  if(e.x < -450 || e.x > width) {
    //println("removing");
    swipeRight = false;
    swipeLeft = false;
    arr.remove(e);
    vel = 1;
  }
}

// draws the emails on the screen
void drawEmails(){
  if(arr.size() >= 2) {
    arr.get(1).display();
  }
  if(arr.size() >= 1) {
    arr.get(0).display();
    animate(arr.get(0));
  }
}

void createEmails(){  
  arr.add(genMail());
  arr.add(genMail());
  arr.add(genMail());
  arr.add(genMail());
  arr.add(genMail());
  arr.add(genMail());
  arr.add(genMail());
  arr.add(genMail());
  arr.add(genMail());
  arr.add(genMail());
}

// generates random emails
emails genMail(){
  String[] ret = new String[3];
  // index for arrays
  
  float brand = random(0, 1);
  if(brand < 0.5){
    int i = (int)random(0, regLen);
    ret[0] = paraOne[i];
    ret[1] = paraTwo[i];
    ret[2] = paraThree[i];
    emails temp = new emails(regTitles[i], ret, false, i);
    return temp;
  }
  else{
    int i = (int)random(0, spamLen);
    int i2 = (int)random(0, spamLen);
    ret[0] = spamParaOne[i];
    ret[1] = spamParaTwo[i2];
    ret[2] = spamParaThree[(int)random(0, spamLen)];
    emails temp = new emails(spamTitles[i], ret, true, i2);
    return temp;
  }
}

String[] genResp(emails e){
  boolean spammy = e.isSpam;
  int r1 = e.resp;
  String[] ret = new String[4];
  
  if(spammy){
    ret[0] = spamResp[r1];
    int r2 = 0;
    while(r2 == r1){
      r2 = (int)random(0, spamLen);
    }
    ret[1] = spamResp[r2];
    int r3 = (int)random(0, regLen);
    ret[2] = regResp[r3];
    
    int r4 = 0;
    while(r4 == r3) {
      r4 = (int)random(0, regLen);
    }
    ret[3] = regResp[r4];
  }
  else if(!spammy){
    ret[0] = regResp[r1];
    int r2 = 0;
    while(r2 == r1){
      r2 = (int)random(0, regLen);
    }
    ret[1] = regResp[r2];
    int r3 = (int)random(0, spamLen);
    ret[2] = spamResp[r3];
    
    int r4 = 0;
    while(r4 == r3) {
      r4 = (int)random(0, spamLen);
    }
    ret[3] = spamResp[r4];
  }
  
  return ret;
}

// draws the background
void drawBg(){
  
  background(225);
  fill(225);
  checkSpam();
  
  noStroke();
  //strokeWeight(20);
  //stroke(50, 50, 50);
  rect(0, 0, width, height);
  
  noStroke();
  fill(100);
  rect(90, 115, 440, 640, 20);
  fill(150);
  rect(75, 100, 440, 640, 20);
  
  timer();
}

// checks the correctness of the swipe
void checkSpam() {
  if(!gameOver){
    if ((swipeRight && !arr.get(0).isSpam) || (swipeLeft && arr.get(0).isSpam)) {
      fill(0,225,0);
    }
    if ((swipeRight && arr.get(0).isSpam) || (swipeLeft && !arr.get(0).isSpam)) {
      fill(225,0,0);
    }
  }
}

// detects the swipe direction
void mouseDragged(){
  //println("press");
  
  if((pmouseX - mouseX) < 0){
     swipeRight = true;
     //println("Right");
  }
  if((pmouseX - mouseX) > 0){
    swipeLeft = true;
    //println("Left");
  }   
}

boolean gameOver;  // checkSpam
String finalTime;

//displays timer
String timer() {
  String milliseconds = str((frameCount)%60);
  String seconds = str((frameCount)/60) + ":";
  String minutes = str((frameCount/60)/60) + ":";
  if (milliseconds.length() == 1) {
    milliseconds = "0" + milliseconds;
  }
  if (seconds.length() == 2) {
    seconds = "0" + seconds;
  }
  if (minutes.charAt(0) == '0') {
    minutes = "";
  }
  fill(0);
  textSize(32);
  text(str(gameOver), 200, 40, 150, 50);
  if (!gameOver) { 
    text(minutes + seconds + milliseconds, 200, 10, 150, 50);
    return minutes + seconds + milliseconds;
  } else {
    text(finalTime, 200, 10, 150, 50);
    return finalTime;
  }
}

//passively checks when game ends
void checkGameOver() {
  if (arr.size() == 0) {
    finalTime = timer();
    gameOver = true;
  }
}
